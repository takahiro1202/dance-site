<!DOCTYPE html>
<html>

<head>
  <title>DanceSite</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <a>タイトル</a>
    <div class="header-content">
      <%= link_to image_tag("mainlogo.gif"), root_path %>
      <div class="header-content__number">
        <a>お問い合わせは</a>
        <h5>0000-00-0000</h5>
      </div>
    </div>
  </header>
  <div id="nav">
    <ul class="nav-ul">
      <li>
        <%= link_to root_path, class: "btn btn-nav" do %>
        <h5>HOME</h5>
        <p>ホーム</p>
        <% end %>
      </li>
      <li>
        <%= link_to "/lesson", class: "btn btn-nav" do %>
        <h5>LESSON</h5>
        <p>レッスン料金</p>
        <% end %>
      </li>
      <li>
        <h5>STAFF</h5>
        <a>スタッフ紹介</a>
      </li>
      <li>
        <h5>CIRCLE</h5>
        <a>関連サークル紹介</a>
      </li>
      <li>
        <h5>SCHOOL</h5>
        <a>スクール概要</a>
      </li>
      <li>
        <h5>CONTACT</h5>
        <a>お問い合わせ</a>
      </li>
    </ul>
  </div>
  <main>
    <%= yield %>
  </main>
  <div class="sub-footer">
    <div class="header-content">
      <%= link_to image_tag("mainlogo.gif"), root_path %>
      <div class="header-content__number">
        <a>お問い合わせは</a>
        <h5>0000-00-0000</h5>
      </div>
    </div>
  </div>
  <footer>
  </footer>
</body>

</html>